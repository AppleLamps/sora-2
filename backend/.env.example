# Server Configuration
PORT=5000
NODE_ENV=development

# Database (Neon PostgreSQL)
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here
# Optional: point to OpenAI sandbox or proxy
OPENAI_BASE_URL=
# Optional: enable content policy checks with a moderation model, e.g., omni-moderation-latest
OPENAI_MODERATION_MODEL=

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Neon Authorize (optional - for Neon Auth integration)
# Get this from your Neon project settings
NEON_AUTH_ISSUER=

# Redis Configuration (for Bull queues)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# CORS Configuration
FRONTEND_URL=http://localhost:3000
