{
  "name": "sora-2-video-app",
  "version": "1.0.0",
  "description": "Web app for generating videos using OpenAI's Sora-2 API",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:backend dev:frontend",
    "dev:backend": "cross-env PORT=5001 npm run dev --workspace=backend",
    "dev:frontend": "cross-env NEXT_PUBLIC_API_URL=http://localhost:5001 npm run dev --workspace=frontend",
    "build": "npm run build --workspaces",
    "start": "npm run start --workspaces",
    "test": "npm -w backend test",
    "load:test": "artillery run load-test/artillery.yml"
  },
  "devDependencies": {
    "artillery": "^2.0.9",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}